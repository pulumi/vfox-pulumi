#!/usr/bin/env bash

#MISE description="Run integration tests"
set -euo pipefail

# Run all test scripts in the tests/ directory
for test_file in tests/test_*; do
    if [[ -x "$test_file" ]]; then
        echo "=== Running $(basename "$test_file") ==="
        bash "$test_file"
        echo ""
    fi
done

echo "âœ“ All integration tests passed"
